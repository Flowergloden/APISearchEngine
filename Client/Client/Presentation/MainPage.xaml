<Page x:Class="Client.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Client.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <utu:NavigationBar Content="{Binding Title}" />

    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16">
      <TextBox Text="{Binding SearchContext, Mode=TwoWay}"
               PlaceholderText="Getting started" />
      <!-- <ComboBox SelectionChanged="{Binding UpdateMode}" ItemsSource="{Binding Modes}" /> -->
      <SplitButton x:Name="SplitButton">
        <Button Content="{Binding SearchMode}" Click="ButtonBase_OnClick"/>
        <SplitButton.Flyout>
          <Flyout x:Name="Flyout">
            <ListView ItemsSource="{Binding Modes}"
                      SelectedItem="{Binding SearchMode, Mode=TwoWay}"
                      SelectionChanged="Selector_OnSelectionChanged">
              <TextBlock Text="{Binding}" />
            </ListView>
          </Flyout>
        </SplitButton.Flyout>
      </SplitButton>
      <Button Content="Search"
              AutomationProperties.AutomationId="SecondPageButton"
              Command="{Binding GoToSecond}" />
    </StackPanel>
  </Grid>
</Page>
